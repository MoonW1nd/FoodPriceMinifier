@import "fonts.styl"
dark-primary-color = #353433
default-primary-color = #00796B
text-primary-color = #FFFFFF
accent-color = #9E9E9E
light-primary-color = #B2DFDB
primary-text-color = #212121
secondary-text-color = #757575
divider-color = #BDBDBD

body
	font-family: FuturaLight
	font-size 24px
	display flex
	justify-content space-around
	color default-primary-color
	background #ffffff
	align-items center
	min-width 100%

#root
	display flex
	justify-content center
	width 100%

.news__author
	font-family: FuturaMedium
	margin 0 10px

.news__text
	margin 0 10px

h3
	font-family FuturaBold
	font-size 50px
	margin 10px 0 0 0

.News
	padding 30px 0
	& div
		padding 5px 0
	& .count-news
		font-family FuturaBold
		font-size 17px
		color secondary-text-color

.none
	display none!important

p
	margin 0 auto

.article
	background #ffffff
	color primary-text-color
	border 1px solid accent-color
	width 800px
	margin 0 0 5px
	box-shadow 2px 2px 5px -1px accent-color
	padding 3px 5px

.comments
	color secondary-text-color
	font-family FuturaLight