@import "./pallete.styl"

.arrow-next-left-wrapper
	display flex
	align-items center
	height  100px
	flex-direction column
	position fixed
	top 55vh
	left 85vw
	justify-content space-around

.checkBox-wrapper
	display flex
	justify-content flex-start
	align-items center

.arrow-next-right
	width 25px
	height 25px
	border-style solid
	border-bottom 2px
	border-left 2px
	transform rotate(45deg)

.comments
	color secondary-text-color
	font-family FuturaLight

.head-mind
	margin 0
	position relative
	bottom 15px
	color secondary-text-color
	font-size 16px

label
	position relative
	bottom 4px
	left 4px

.author__name
	color #B02F19

